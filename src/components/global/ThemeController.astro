<div id="light-theme-controller" class="flex cursor-pointer place-content-center px-1 py-2 dark:hidden">
  <iconify-icon icon="ph:sun-fill" mode="svg" width="1.5rem" height="1.5rem" class="inline-block h-6 w-6"
  ></iconify-icon>
</div>
<div id="dark-theme-controller" class="hidden cursor-pointer place-content-center px-1 py-2 dark:flex">
  <iconify-icon icon="ph:moon-stars-fill" mode="svg" width="1.5rem" height="1.5rem" class="inline-block h-6 w-6"
  ></iconify-icon>
</div>

{/* テーマの更新 */}
<script>
  const lightThemeController = document.getElementById('light-theme-controller')!
  const darkThemeController = document.getElementById('dark-theme-controller')!

  const updateTheme = (theme: 'light' | 'dark') => {
    document.documentElement.setAttribute('data-theme', theme)
    localStorage.setItem('theme', theme)
  }

  lightThemeController.addEventListener('click', () => updateTheme('dark'))
  darkThemeController.addEventListener('click', () => updateTheme('light'))
</script>
