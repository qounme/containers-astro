<script>
  const lightThemeController = document.getElementById('light-theme-controller')!
  const darkThemeController = document.getElementById('dark-theme-controller')!

  const updateTheme = (theme: 'light' | 'dark') => {
    document.documentElement.setAttribute('data-theme', theme)
    localStorage.setItem('theme', theme)
  }

  lightThemeController.addEventListener('click', () => updateTheme('dark'))
  darkThemeController.addEventListener('click', () => updateTheme('light'))
</script>
