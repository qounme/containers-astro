---
import Drawer from './Drawer.astro'
import ThemeController from './ThemeController.astro'
import { routes } from '../../configs/routes'
---

<header class="sticky top-0 z-10 bg-base-100 bg-opacity-90 text-base-content backdrop-blur">
  <nav class="navbar">
    <div class="navbar-start w-auto sm:w-1/2">
      <Drawer />
    </div>
    <div class="navbar-center flex-grow sm:flex-grow-0">
      <a
        href={routes.root}
        class="btn btn-ghost no-animation btn-sm text-xl font-normal sm:btn-md hover:bg-transparent sm:text-2xl"
        >Containers Astro</a
      >
    </div>
    <div class="navbar-end flex w-auto items-center gap-1 sm:w-1/2">
      <div class="divider divider-horizontal mx-0"></div>
      <ThemeController />
      <a
        href="https://github.com/qounme/containers-astro"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-square btn-ghost no-animation btn-sm">
        <iconify-icon icon="mdi:github" width="1.5rem" height="1.5rem" class="inline-block size-6"></iconify-icon>
      </a>
    </div>
  </nav>
</header>
